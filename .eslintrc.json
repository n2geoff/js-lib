{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "riot": true
    },
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
